{
  "name": "ui-55",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gaspard-Bruno/UI.55.git"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-push": "git-branch-is master && (yarn compile && git add . && git commit -m 'hook: compile changes') || true"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn hooks:pre-commit"
    }
  },
  "dependencies": {
    "@babel/plugin-transform-react-jsx": "^7.10.4",
    "axios": "^0.19.2",
    "icomoon-react": "^2.0.16",
    "lodash.get": "^4.4.2",
    "lodash.startcase": "^4.4.0",
    "react": "^16.13.1",
    "react-beautiful-dnd": "^13.0.0",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-select": "^3.1.0",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "styled-components": "^5.1.1"
  },
  "scripts": {
    "start": "PORT=3005 react-app-rewired start",
    "clean": "rimraf dist",
    "compile": "npm run clean && cross-env NODE_ENV=production babel src/components --out-dir dist --copy-files",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "plugin:jsx-a11y/strict",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended",
      "react-app"
    ],
    "plugins": [
      "react",
      "react-hooks",
      "jsx-a11y",
      "prettier",
      "babel"
    ],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/boolean-prop-naming": [
        "warn",
        {
          "rule": "^(is|has)[A-Z]([A-Za-z0-9]?)+"
        }
      ],
      "react/display-name": "off",
      "react-hooks/rules-of-hooks": "warn",
      "react/prop-types": 1,
      "react-hooks/exhaustive-deps": "warn",
      "no-console": "off",
      "prettier/prettier": [
        "warn"
      ]
    },
    "globals": {
      "window": true,
      "document": true,
      "localStorage": true,
      "FormData": true,
      "FileReader": true,
      "Blob": true,
      "navigator": true,
      "process": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@welldone-software/why-did-you-render": "^4.2.7",
    "cross-env": "^7.0.2",
    "customize-cra": "^1.0.0",
    "dotenv": "^8.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "git-branch-is": "^4.0.0",
    "react-app-rewired": "^2.1.6",
    "react-scripts": "^3.4.2",
    "rimraf": "^3.0.2"
  }
}
